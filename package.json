{
  "name": "pipe-core",
  "version": "1.0.0",
  "description": "A protocol for sharing data between LLMs via IPFS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:scripts": "tsc scripts/*.ts --outDir dist/scripts",
    "test": "jest",
    "start": "node dist/index.js",
    "dev": "node --loader ts-node/esm src/index.ts",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "test:basic": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' node --loader ts-node/esm scripts/test-basic-operations.ts",
    "test:encryption": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' node --loader ts-node/esm scripts/test-encryption.ts",
    "test:bundles": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' node --loader ts-node/esm scripts/test-bundles.ts",
    "test:api": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' node --loader ts-node/esm scripts/test-api.ts",
    "test:all": "npm run test:basic && npm run test:encryption && npm run test:bundles && npm run test:api"
  },
  "keywords": [
    "ipfs",
    "llm",
    "data-sharing",
    "protocol"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@helia/unixfs": "^4.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.0",
    "blockstore-core": "^5.0.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helia": "^5.2.0",
    "jest": "^29.7.0",
    "multiformats": "^13.3.1",
    "node-fetch": "^2.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "zod": "^3.24.1"
  }
}
